# ============================================================
# ASAGUS MONOREPO — .gitattributes
# ============================================================

# Auto-detect text files and normalize line endings to LF
* text=auto eol=lf

# Exclude node_modules from text normalization
node_modules/** -text
apps/**/node_modules/** -text
services/**/node_modules/** -text
packages/**/node_modules/** -text

# Shell scripts — always LF
*.sh text eol=lf
scripts/*.sh text eol=lf

# Windows batch files — always CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Prisma schema
*.prisma text eol=lf

# JSON, YAML, TOML — LF
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# TypeScript / JavaScript — LF
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf

# CSS — LF
*.css text eol=lf

# Markdown — LF
*.md text eol=lf

# Binary files — no normalization
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.svg binary
*.otf binary
*.ttf binary
*.woff binary
*.woff2 binary
*.exe binary
*.zip binary
*.tar.gz binary
*.db binary
